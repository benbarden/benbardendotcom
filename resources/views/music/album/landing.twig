{% extends 'theme/ben/base.twig' %}

{% block page_body %}

<h1>{{ Album.Title }}</h1>

<div class="group">
    <div class="album-landing-box" style="width: 55%;">

        {% include Album.TemplatePath~'overview.twig' %}
        {% include 'music/album/track-listing.twig' %}
        {% if Album.AdditionalInfo == 'Y' %}
        {% include Album.TemplatePath~'additional.twig' %}
        {% endif %}

        <h2>Licensing</h2>
        <p>All tracks are free to use for non-commercial purposes. Attribution required.</p>
        <a rel="license" href="http://creativecommons.org/licenses/by-nc/4.0/">
            <img alt="Creative Commons License" style="border-width:0" src="https://i.creativecommons.org/l/by-nc/4.0/88x31.png" /></a>
        <br />This work is licensed under a
        <a rel="license" href="http://creativecommons.org/licenses/by-nc/4.0/">Creative Commons Attribution-NonCommercial 4.0 International License</a>.

    </div>
    <div class="album-landing-box" style="width: 10%;">
        &nbsp;
    </div>
    <div class="album-landing-box" style="width: 30%;">
        <img src="{{ Album.CoverImage }}" alt="Ben Barden - {{ Album.Title }}" style="width: 250px; height: 250px;">
        {% include 'music/player/render.twig' %}
    </div>

</div>

{% endblock page_body %}

{% block footer_scripts %}
    {% if Album.Playlist %}
        {% include 'music/album/dynamic-playlist.twig' with {'PlaylistItems': Album.Playlist.playlistItems} %}
    {% else %}
        <script src="{{ Album.JsLibraryFile }}"></script>
    {% endif %}
    {% include 'music/player/base.twig' %}
{% endblock footer_scripts %}
